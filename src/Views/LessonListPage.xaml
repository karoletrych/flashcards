<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Flashcards.Views.LessonListPage"
             xmlns:customViews="clr-namespace:Flashcards.Views.CustomViews"
             xmlns:viewModels="clr-namespace:Flashcards.ViewModels;assembly=ViewModels"
             xmlns:converters="clr-namespace:Flashcards.Views.Converters;assembly=Views"
             xmlns:views="clr-namespace:Flashcards.Views;assembly=Views">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:LanguageToFlagConverter x:Key="LanguageToFlag" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="ic_add_white_48dp.png" Command="{Binding AddLessonCommand}" />
        <ToolbarItem Icon="ic_settings_white_48dp.png" Command="{Binding SettingsCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.BindingContext>
        <viewModels:LessonListViewModel />
    </ContentPage.BindingContext>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="80*" />
        </Grid.RowDefinitions>
        <Frame Grid.Row="0" Padding="0">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding RunRepetitionCommand}" />
            </Frame.GestureRecognizers>
            <StackLayout>
                <Label FontAttributes="Bold" FontSize="Large" Text="{views:Translate Repetition}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           Text="{Binding PendingRepetitionQuestionsNumber, StringFormat={views:Translate FlashcardsForToday}}"
                           Style="{DynamicResource ListItemTextStyle}" />

                    <StackLayout Grid.Column="1">
                        <Label Text="{Binding ActiveRepetitionsRatioString}" />
                        <ProgressBar Progress="{Binding ActiveRepetitionsRatio}" />
                    </StackLayout>
                </Grid>
            </StackLayout>
        </Frame>
        <StackLayout Grid.Row="1">
            <Label FontAttributes="Bold" FontSize="Large" Text="{views:Translate Lessons}" />
            <customViews:CommandListView
                ItemsSource="{Binding Lessons}"
                ItemClickCommand="{Binding PracticeLessonCommand}"
                x:Name="LessonList">
                <customViews:CommandListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20*" />
                                    <ColumnDefinition Width="15*" />
                                    <ColumnDefinition Width="15*" />
                                    <ColumnDefinition Width="30*" />
                                    <ColumnDefinition Width="20*" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" Text="{Binding Name}"
                                       Style="{DynamicResource ListItemTextStyle}" />
                                <Image Grid.Column="1" Source="{Binding FrontLanguage,
                                        Converter={StaticResource LanguageToFlag}}"/>
                                <Image Grid.Column="2" Source="{Binding BackLanguage,
                                        Converter={StaticResource LanguageToFlag}}" />
                                <StackLayout Grid.Column="3">
                                    <Label Text="{Binding LearnedFlashcardsRatioString}" />
                                    <ProgressBar Progress="{Binding LearnedFlashcardsRatio}" />
                                </StackLayout>
                                <Button Grid.Column="4"
                                        Command="{Binding Path=BindingContext.EditLessonCommand, 
                                            Source={x:Reference LessonList}}"
                                        CommandParameter="{Binding .}"
                                        BorderColor="Transparent"
                                        BackgroundColor="Transparent"
                                        Image="ic_settings_blue_light_36dp.png" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </customViews:CommandListView.ItemTemplate>
            </customViews:CommandListView>
        </StackLayout>
    </Grid>


</ContentPage>