<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Flashcards.Views.AddFlashcardPage">
    <ContentPage.Content>

        <StackLayout VerticalOptions="FillAndExpand">
            <StackLayout>
                <Entry
                    Placeholder="Front"
                    Text="{Binding FrontText, Mode = TwoWay}"
                    TextChanged="FrontEntry_OnTextChanged" />
                <Entry
                    Placeholder="Back"
                    Text="{Binding BackText, Mode = TwoWay}"
                    TextChanged="BackEntry_OnTextChanged" />
                <Label Text="Powered by Yandex.Translate">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="YandexLabel_OnTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>

            <Grid x:Name="ImagesGrid"
                  RowSpacing="1" ColumnSpacing="1"
                  VerticalOptions="FillAndExpand" />
            <StackLayout Orientation="Vertical">
                <Button Text="Next Flashcard" Command="{Binding NextFlashcard}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>