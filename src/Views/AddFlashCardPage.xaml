<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:viewModels="clr-namespace:Flashcards.ViewModels;assembly=ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customViews="clr-namespace:Flashcards.Views.CustomViews;assembly=Views"
             xmlns:controls="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
             x:Class="Flashcards.Views.AddFlashcardPage">
    <ContentPage.BindingContext>
        <viewModels:AddFlashcardViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <AbsoluteLayout>
            <StackLayout
                    AbsoluteLayout.LayoutFlags="All"
                    AbsoluteLayout.LayoutBounds=".5,0,1,.3"
                    Spacing="0"
                    VerticalOptions="Start">
                    <Entry
                        FontSize="Small"
                        Placeholder="Front"
                        Text="{Binding FrontText, Mode = TwoWay}"
                        Completed="FrontEntry_OnCompleted" />
                    <Entry
                        FontSize="Small"
                        Placeholder="Back"
                        Text="{Binding BackText, Mode = TwoWay}"
                        Completed="BackEntry_OnCompleted" />
                    <Label
                        Text="Powered by Yandex.Translate"
                        FontSize="Small">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="YandexLabel_OnTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>

            <Frame
                Padding="0"
                AbsoluteLayout.LayoutFlags="All"
                AbsoluteLayout.LayoutBounds=".5,.38,.5,.20">
                <Image
                    Source="{Binding SelectedImageUri}"
                    HeightRequest="250"
                    Aspect="Fill" />
            </Frame>

            <controls:FlowListView
                FlowColumnCount="3"
                HasUnevenRows="false"
                FlowItemsSource="{Binding ImageUris}"
                FlowTappedBackgroundColor="LawnGreen"
                FlowLastTappedItem="{Binding SelectedImageUri}"
                AbsoluteLayout.LayoutFlags="All"
                AbsoluteLayout.LayoutBounds=".5,.88,1,.4">
                <controls:FlowListView.FlowColumnTemplate>
                    <DataTemplate>
                        <Image
                            Source="{Binding .}"
                            Aspect="Fill" />
                    </DataTemplate>
                </controls:FlowListView.FlowColumnTemplate>
            </controls:FlowListView>

            <Button
                Text="Next Flashcard"
                Command="{Binding NextFlashcardCommand}"
                VerticalOptions="End"
                AbsoluteLayout.LayoutBounds=".5,1,1,.1"
                AbsoluteLayout.LayoutFlags="All" />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>