<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lesson="clr-namespace:FlashCards.ViewModels.Lesson;assembly=ViewModels"
             x:Class="FlashCards.Views.Lesson.AddLessonPage">
    <ContentPage.Content>
        <StackLayout>
                <Entry Placeholder="Nazwa lekcji" />
                <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand">
                    <Label Text="Front language" />
                    <Picker ItemsSource="{Binding LanguageNames}" SelectedItem="{Binding SelectedFrontLanguage}"  WidthRequest="100"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand">
                    <Label Text="Back language" />
                    <Picker ItemsSource="{Binding LanguageNames}" SelectedItem="{Binding SelectedBackLanguage}"  WidthRequest="100"/>
                </StackLayout>   
        </StackLayout>
    </ContentPage.Content>
</ContentPage>