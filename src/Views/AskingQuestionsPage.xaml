<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             xmlns:viewModels="clr-namespace:Flashcards.ViewModels;assembly=ViewModels"
             xmlns:customViews="clr-namespace:Flashcards.Views.CustomViews;assembly=Views"
             xmlns:views="clr-namespace:Flashcards.Views;assembly=Views"
             x:Class="Flashcards.Views.AskingQuestionsPage">
    <ContentPage.BindingContext>
        <viewModels:AskingQuestionsViewModel/>
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"></RowDefinition>
            <RowDefinition Height="60*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0">
            <customViews:MulticolorBar
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                ItemsSource="{Binding QuestionStatuses}" />
            <Label Text="{Binding QuestionsProgress}" />
        </StackLayout>

        <StackLayout Grid.Row="1">
            <Image
                BackgroundColor="Green"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand" 
                Source ="{Binding ImageUri}"
                Aspect="Fill"/>
            <StackLayout Orientation="Horizontal">
                <Label IsVisible ="{Binding BackIsVisible}" Text="{Binding FrontText}" />
                <Label IsVisible ="{Binding FrontIsVisible}" Text="{Binding BackText}" />
            </StackLayout>
        </StackLayout>

        <StackLayout Orientation="Horizontal" Grid.Row="2">
            <Button 
                    Text="{views:Translate Show}"
                    IsVisible="{Binding FrontIsVisible}"
                    Command="{Binding ShowBackCommand}" 
                    HorizontalOptions="FillAndExpand"/>

            <Grid HorizontalOptions="FillAndExpand"
                  IsVisible="{Binding BackIsVisible}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Text="{views:Translate DontKnow}"
                        BackgroundColor="Red"
                        FontSize="10"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="CenterAndExpand"
                        Command="{Binding UserAnswerCommand}"
                        Grid.Column="0">
                    <Button.CommandParameter>
                        <system:Boolean>False</system:Boolean>
                    </Button.CommandParameter>
                </Button>
                <Button Text="{views:Translate Know}"
                        FontSize="10"
                        BackgroundColor="LawnGreen"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="CenterAndExpand"
                        Command="{Binding UserAnswerCommand}"
                        Grid.Column="1">
                    <Button.CommandParameter>
                        <system:Boolean>True</system:Boolean>
                    </Button.CommandParameter>
                </Button>
            </Grid>
            
        </StackLayout>
    </Grid>
</ContentPage>