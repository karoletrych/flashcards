<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashCards.TrainingSetListPage"
             xmlns:viewModel="clr-namespace:FlashCards.ViewModel">
    <ListView ItemsSource="{Binding Items}"
              CachingStrategy="RecycleElement">
        <ListView.BindingContext>
            <viewModel:TrainingSetListViewModel />
        </ListView.BindingContext>

        <ListView.ItemTemplate>
            <DataTemplate>
                <viewModel:CommandViewCell Command="OpenQuestionsPage">
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding Name}"
                               Style="{DynamicResource ListItemTextStyle}" />
                        <Label Text="{Binding QuestionsCount}"
                               Style="{DynamicResource ListItemDetailTextStyle}" />
                        <Label Text="{Binding Languages}"
                               Style="{DynamicResource ListItemDetailTextStyle}" />
                    </StackLayout>
                </viewModel:CommandViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>